{% use '@!Generator/skeleton/controller/_usages.php.twig' %}
{% block usages %}
{{ parent() }}
{% if generate_options.useDatatable %}
use {{ meta_entity.fullClassName | replace({'\\Entity\\':'\\Datatable\\'}) }}Datatable;
{% endif %}
{% endblock %}


{% block use_repository %}
{% if generate_options.useDatatable == false %}
{{ parent() }}
{% endif %}
{% endblock %}

{% block use_extended_controller %}
{% if subdir or (meta_entity.namespace | replace({'\\Entity': ''}) != generate_options.defaultBundleNamespace) %}
use {{ generate_options.defaultBundleNamespace }}\Controller\CrudController;
{% endif %}
{% endblock %}