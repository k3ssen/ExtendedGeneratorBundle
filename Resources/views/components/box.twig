<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    {% block box_header %}
        <h3 class="box-title">
            {% block box_title %}
                {{ title|default('') }}
            {% endblock %}
        </h3>
    {% endblock %}
    <div class="mb-2 mb-md-0">
        {% block box_actions %}
            {% if entity is defined or action_prefix is defined %}
                {% include '@ExtendedGenerator/components/box_actions.twig' %}
            {% endif %}
        {% endblock %}
    </div>
</div>
{% block box_body %}
    {% block body %}
        {{ content|default('')|raw }}
    {% endblock %}
{% endblock %}