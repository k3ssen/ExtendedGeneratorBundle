{% extends 'components/card.html.twig' %}

{% block card_body %}
    {% block body %}{% endblock %}
    {% block card_form %}
        {% block card_form_start %}
            {{ form_start(form) }}
        {% endblock %}
        {% block card_form_widget %}
            {% for form_child in form %}
                {% set block_form_row = 'form_row_'~form_child.vars.name %}
                {% if block(block_form_row) is defined %}
                    {{ block(block_form_row) }}
                {% endif %}
                {{ form_row(form_child) }}
            {% endfor %}
        {% endblock %}
        {% block card_form_buttons %}
            <button class="btn btn-{{ btn_type|default('primary') }}">{{ btn_text|default('Save') }}</button>
        {% endblock %}
        {% block card_form_end %}
            {{ form_end(form) }}
        {% endblock %}
    {% endblock %}
{% endblock %}